{
    "name": "pmg/composer-wp-example",
    "description": "Getting start with WordPress and Composer",
    "license": "MIT",
    "repositories": [
        {
            "type":"composer",
            "url":"http://wpackagist.org"
        }
    ],
    "require": {
        "php": ">=5.4",
        "johnpbloch/wordpress-core-installer": "0.2.1",
        "johnpbloch/wordpress": "~4.6.1",
        "composer/installers": "~1.0",
        "wpackagist-plugin/wordpress-seo": "~3.8",
        "wpackagist-plugin/duplicate-post": "3.0.3",
        "wpackagist-plugin/comet-cache": "160917",
        "wpackagist-plugin/bwp-minify": "1.3.3",
        "wpackagist-plugin/all-404-redirect-to-homepage": "1.4",
        "wpackagist-plugin/regenerate-thumbnails": "2.2.6",
        "wpackagist-plugin/ewww-image-optimizer": "3.1.3",
        "wpackagist-plugin/wp-migrate-db": "0.9"
    },
    "extra": {
        "wordpress-install-dir": "wp",
        "installer-paths": {
            "wp/wp-content/plugins/{$name}": ["type:wordpress-plugin"],
            "wp/wp-content/themes/{$name}": ["type:wordpress-theme"],
            "wp/wp-content/mu-plugins/{$name}": ["type:wordpress-muplugin"]
        }
    }
}